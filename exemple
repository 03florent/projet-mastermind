import pygame, time, random

def drawborder():
    pygame.draw.rect(screen,[0,0,170],[0,0,600,900],100)
    pygame.display.flip()
    
    word = "MasterMind"
    screentext = font.render(word, True, [120,200,30], [0,0,0])
    screen.blit(screentext, [200,18])
