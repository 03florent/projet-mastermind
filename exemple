pygame.init()
screen = pygame.display.set_mode([600,900])
screen.fill([0,0,0])
pygame.display.flip()

font = pygame.font.Font(None, 50)
smallfont = pygame.font.Font(None, 30)



raw_input("Press ENTER to close the graphics window")
pygame.quit()
